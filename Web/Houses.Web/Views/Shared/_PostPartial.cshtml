@model PostInputViewModel

<div class="row">
    <div class="col-sm-6">
        <div class="card ">
            <div class="card-body">
                <h4 class="card-group text-center">Name</h4>
                <p class="card-text">Content</p>
                <div class="d-grid gap-2">
                    <form>
                        <a asp-controller="Post" asp-action="Edit" asp-route-id="Id" class="btn btn-warning">Edit</a>
                        <a class="mt-2" asp-controller="Post" asp-action="Delete" asp-route-id="Id">
                            <div class="d-grid gap-2">
                                <input type="submit" value="Delete" class="btn btn-danger mb-2" />
                            </div>
                        </a>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
