@model UserServiceViewModel

<form>
    <div class="container">
        <div class="main-body">

            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb" class="main-breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">User Profile</li>
                </ol>
            </nav>
            <!-- /Breadcrumb -->

            <div class="row gutters-sm">
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <img src="~/img/profile-img/@Model" alt="Admin" class="rounded-circle" width="150">
                                <div class="mt-3">
                                    <h4>@Model.FirstName</h4>
                                    <input type="hidden" name="Id" value="@Model.Id" />
                                    <p class="text-secondary mb-1">@Model.LastName</p>
                                    <p class="text-muted font-size-sm">@Model.Email</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="card mb-3">
                        <div class="card-body">
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">FirstName</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @Model.FirstName
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">LastName</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @Model.LastName
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Email</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @Model.Email
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (!Model.Properties.Any())
    {
        <h2 class="text-center">No properties found by the given criteria!</h2>
    }

    <div class="row">
        @foreach (var property in Model.Properties)
        {
            <partial name="_PropertyPartial" model="@property" />
        }
    </div>
</form>