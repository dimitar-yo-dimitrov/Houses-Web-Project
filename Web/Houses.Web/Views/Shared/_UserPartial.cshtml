@model UserServiceViewModel

<div class="row">
    <div class="col-md-4 mb-3">
        <div class="card">
            <div class="card-body">
                <div class="d-flex flex-column align-items-center text-center">
                    <img src="@Model.ProfilePicture" id="uploadedImage" alt="Uploaded Image" accept="image/gif, image/jpeg, image/png" class="rounded-3" width="200">
                    <div class="mt-3">
                        <input type="hidden" name="Id" value="@Model.Id" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="card mb-3">
            <div class="card-body">
                <hr>
                <div class="row">
                    <div class="col-sm-3">
                        <h6 class="mb-0">FirstName:</h6>
                    </div>
                    <div class="col-sm-9 text-info">
                        @Model.FirstName
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-3">
                        <h6 class="mb-0">LastName:</h6>
                    </div>
                    <div class="col-sm-9 text-info">
                        @Model.LastName
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Email:</h6>
                    </div>
                    <div class="col-sm-9 text-info">
                        @Model.Email
                    </div>
                </div>
                <hr/>
                <div class="row">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Phone Number:</h6>
                    </div>
                    <div class="col-sm-9 text-info">
                        @Model.PhoneNumber
                    </div>
                </div>
                <hr>
            </div>
        </div>
        <hr>
        <form>
            <div class="navbar-collapse collapse d-sm-inline-flex">
                <div class="mt-2 mb-2 m-lg-2">
                    <button class="btn btn-warning text-white" asp-controller="User" asp-action="EditProfile" asp-route-id="@Model.Id">Edit Profile</button>
                </div>
                <div class="mt-2 mb-2 m-lg-2">
                    <button class="btn btn-info text-white" asp-controller="Property" asp-action="Mine" asp-route-id="@Model.Id">My Properties</button>
                </div>
                <div class="mt-2 mb-2 m-lg-2">
                    <button class="btn btn-success text-white" asp-controller="Post" asp-action="Mine" asp-route-id="@Model.Id">My Posts</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}