
@inject SignInManager<ApplicationUser> SignInManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
    {
        <li>
            <form class="mt-2 mb-3 m-lg-2">
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @(User.Identity!.Name)!</a>
            </form>
        </li>
        if (User.IsInRole(ValidationConstants.Role.AdministratorRoleName))
        {
            <li>
                <a asp-area="Administration" asp-controller="User" asp-action="Index" title="Admin">Administrator</a>
            </li>
        }
        <li>
            <form class="form-inline justify-content-between" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = string.Empty })">
                <button class="btn btn-outline-primary text-black" type="submit">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Login</a>
        </li>
    }
</ul>