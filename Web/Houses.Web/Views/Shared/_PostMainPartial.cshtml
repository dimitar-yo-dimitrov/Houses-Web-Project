@model PostServiceViewModel

<div class="col-md-4">
    <div class="card mb-5">
        <div class="card-body">
            <h4>Name of sender: <b>@Model.Sender</b></h4>
            <hr />
            <p></p>
            <h6>Content: <b>@Model.Content </b></h6>
            <hr />
            <p></p>
            <h6>Published on: <b>@Model.Date</b></h6>
            <br />
            <form>
                <div class="navbar-collapse collapse d-sm-inline-flex">
                    @{
                        if (User?.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <div class="mt-2 mb-2 m-lg-2">
                                <a asp-area="" class="btn btn-warning mt-2 mb-2 m-lg-2 text-white" asp-controller="Post" asp-action="Edit"
                                   asp-route-id="@Model.Id">
                                    <i class="fa-solid fa-pencil"></i>
                                </a>
                            </div>
                            <div class="mt-2 mb-2 m-lg-2">
                                <a onclick="return confirm('Are you sure that you want to delete this massage?');" asp-area="" class="btn btn-danger text-white mt-2 mb-2 m-lg-2" asp-controller="Post" asp-action="Delete"
                                   asp-route-id="@Model.Id">
                                    <i class="fa-solid fa-trash"></i>
                                </a>
                            </div>
                        }
                    }
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}