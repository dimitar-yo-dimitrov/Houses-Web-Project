@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<Houses.Core.ViewModels.AllPropertyViewModel>

@{
    ViewBag.Title = "All Properties";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    @foreach (var property in Model)
    {
        <div class="card col-4" style="width: 20rem; ">
            <img class="card-img-top" style="width: 18rem;"
                 src="@property.ImageUrl" alt="Property Image">
            <div class="card-body">

                <h5 class="card-title mt-1">@property.Title</h5>
                <p class="mb-0">Description: @property.Description</p>
                <p class="mb-0">City: @property.City</p>
                <p class="mb-0">Price: @property.Price</p>
                <p class="mb-0">Rating: @property.SquareMeters</p>
                <p>Category: @property.PropertyType</p>
            </div>

            <form class="input-group-sm" asp-controller="Property" asp-action="AddToCollection" asp-route-propertyId="@property.Id">
                <input type="submit" value="Add to Collection" class="fs-6 btn btn-success mb-3 p-2" />
            </form>
        </div>
    }
</div>