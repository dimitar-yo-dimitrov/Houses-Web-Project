@model List<PostInputViewModel>

@{
    ViewBag.Title = "All Posts";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />
<div class="d-grid gap-3 mb-3">
    <a asp-controller="Post" asp-action="CreatePost" class="btn btn-primary">Add Post</a>
</div>

@if (Model.Any())
{
    <div class="row">
        @foreach (var post in Model)
        {
            <div class="col-sm-6">
                <div class="card ">
                    <div class="card-body">
                        <h4 class="card-group text-center">@post.Title<p></h4>
                        <p class="card-text">@post.Content</p>
                        <div class="d-grid gap-2">
                            <a asp-controller="Post" asp-action="EditPost" asp-route-id="@post.Id" class="btn btn-warning">Edit</a>
                            <form class="mt-2" asp-controller="Post" asp-action="Delete" asp-route-id="@post.Id">
                                <div class="d-grid gap-2">
                                    <input type="submit" value="Delete" class="btn btn-danger mb-2" onclick="myConfirm(event)" />
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p class="text-center">No posts yet!</p>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}