@model AllPostQueryViewModel

@{
    ViewBag.Title = "All Posts";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<form method="get" class="row mt-3 mb-3 m-lg-3">
    <div class="row mt-3 mb-3 m-lg-3">
        <a asp-controller="Post" asp-action="Create" class="btn btn-primary text-black">Add Post</a>
    </div>
    
    <div class="form-group col-md-3">
        <label asp-for="SearchTerm"></label>
        <input asp-for="SearchTerm" class="form-control">
    </div>
    <div class="form-group col-md-3">
        <div class="form-group">
            <label asp-for="Sorting"></label>
            <select asp-for="Sorting" class="form-control">
                <option value="0">Newest</option>
                <option value="1">Oldest</option>
            </select>
        </div>
    </div>

    <div class="col-md-2">
        <div class="form-group mt-3 p-2">
            <input type="submit" value="Search" class="btn btn-primary text-black" />
        </div>
    </div>
</form>

@{
    var previousPage = Model.CurrentPage - 1;
    if (previousPage < 1)
    {
        previousPage = 1;
    }

    var maxPage = Math.Ceiling((double)Model.TotalPostCount /
                               AllPostQueryViewModel.PostPerPage);
}

<div class="row mb-5">
    <div class="col-md-6 d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary text-dark
           @(Model.CurrentPage == 1 ? "disabled" : string.Empty)"
           asp-controller="Post"
           asp-action="All"
           asp-route-currentPage="@previousPage"
           asp-route-searchTerm="@Model.SearchTerm"
           asp-route-sorting="@((int)Model.Sorting)"><<</a>
    </div>

    @{
        var shouldButtonBeDisabled = Model.CurrentPage == maxPage ||
                                     !Model.Posts.Any();
    }

    <div class="col-md-6 d-grid gap-2 d-md-flex justify-content-md-end">
        <a class="btn btn-primary text-dark
           @(shouldButtonBeDisabled ? "disabled" : string.Empty)"
           asp-controller="Post"
           asp-action="All"
           asp-route-currentPage="@(Model.CurrentPage + 1)"
           asp-route-searchTerm="@Model.SearchTerm"
           asp-route-sorting="@((int)Model.Sorting)">>></a>
    </div>
</div>

@if (!Model.Posts.Any())
{
    <p class="text-center">No posts yet!</p>
}

<div class="row">
    @foreach (var post in Model.Posts)
    {
        <partial name="_PostPartial" model="@post" />
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}