@model IEnumerable<UserListViewModel>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Application Users</h3>
                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                    <tr>
                        <th>User</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Name</td>
                            <td>@user.Email</td>
                            <td>
                                <a asp-area="Admin" asp-action="Edit" asp-controller="Admin" asp-route-id="@user.Id" class="btn btn-outline-info">Edit</a>
                                <a asp-area="Admin" asp-action="Roles" asp-controller="Admin" asp-route-id="@user.Id" class="btn btn-outline-warning">Roles</a>
                                <a asp-area="Admin" asp-action="RemoveUser" asp-controller="Admin" asp-route-id="@user.Id" class="btn btn-outline-danger">Remove</a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>